class Solution {
public:
    int longestValidParentheses(string s) {
        stack<int> st;

        int maxLen = 0;
        st.push(-1);
        for(int i=0;i<s.size();i++){
            
            char ch = s[i];


            if(ch == '('){
                st.push(i);
            }
            else{
                st.pop();
                if(st.empty()){
                    st.push(i);
                }
                else{
                    int currlen = i - st.top();
                    maxLen = max(maxLen,currlen); 
                }
            }
        }
        return maxLen;
    }
};
