// Brute force T.C=O(N^2)
class Solution {
public:
    bool isValid(string s) {
        if(s.size() == 0) return true;
        int fnd = s.find("abc");
        if(fnd != string::npos){
            string tleft = s.substr(0,fnd);
            string tright = s.substr(fnd+3,s.size());

            return isValid(tleft+tright);

        }
        return false;
    }
};


//optimal

class Solution {
public:
    bool isValid(string s) {
        stack<char> st;

        for(auto ch:s){
            if(ch == 'a'){
                st.push(ch);
            }
            else if(ch == 'b'){
                if(!st.empty() && st.top()=='a'){
                    st.push(ch);
                }
                else{
                    return false;
                }
            }
            else{
               if(!st.empty() && st.top() == 'b')
               {
                    st.pop();
                    if(!st.empty()) st.pop();
                    else return false;
               }
               else{
                return false;
               }
        
            }
        }

        return st.empty();
    }
};
